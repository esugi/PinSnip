<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:pinsnip_app.Resources"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:String x:Key="ApproveIcon">4</system:String>
    <system:String x:Key="UndoPointIcon">3</system:String>
    <system:String x:Key="UndoBothIcon">7</system:String>
    <system:String x:Key="CancelIcon">&lt;</system:String>

    <Style x:Key="ValidateIconStyle" TargetType="{x:Type Button}">
        <Setter Property="FontFamily" Value="Webdings" />
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Background" Value="#f7ad96" />
        <Setter Property="TextBlock.TextDecorations" Value="{x:Null}" />
        <Setter Property="Cursor" Value="{x:Null}" />
        <Setter Property="BorderThickness" Value="0" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True" >
                <Setter Property="Foreground" Value="#f7ad96" />
                <Setter Property="Background" Value="Black"/>
            </Trigger>
        </Style.Triggers>
    </Style>
       
</ResourceDictionary>

